@using System.Globalization;

@model IEnumerable<EmployeesCrud.Models.Domain.Employee>
@{
	ViewData["Title"] = "Employees";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Date of Birth</th>
			<th>Salary</th>
			<th>Department</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model) {
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
				<td>@employee.Salary.ToString("F2", CultureInfo.InvariantCulture)</td>
				<td>@employee.Department</td>
				<td><a class="nav-link text-opacity-75" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">View</a></td>
			</tr>
		}
	</tbody>
</table>